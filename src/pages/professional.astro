---
const title = "Professional Projects";
const subtitle = "Please click More Info for details!";

import Layout from "../layouts/Layout.astro";
import HeaderSmall from "../components/HeaderSmall.astro";
import ProfessionalCards from "../components/ProfessionalCards.astro";
import data from "../data/site.json";


type Props = {
  projectTitle: string;
  href: string;
  body: string;
  type?: string;
  repo?: string;
  image: string;
};
---

<Layout title="professional">
  <main>
    <HeaderSmall title={title} subtitle={subtitle} />
    <div class="">
      <section class="section">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
          <div class="grid md:grid-cols-2 sm:grid-cols-1 gap-8">
            {
              data.professional.map(
                (
                  value: {
                    projectTitle: string;
                    href: string;
                    about: string;
                    type?: string;
                    image: string;
                  },
                  index: number
                ) => {
                  return (
                    <ProfessionalCards
                      projectTitle={value.projectTitle}
                      href={value.href}
                      body={value.about}
                      type={value.type}
                      image={value.image}
                    />
                  );
                }
              )
            }
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style></style>
