---
interface Props {
  title: string;
  image: string;
  about: string;
  role: string;
  projectstatus: string;
  timeFrame: string;
  data: string;
}

const { title, image, about ,role,projectstatus,timeFrame,data} = Astro.props;
---

<div class="max-w-fit max-h-full mx-auto  bg-stone-100 text-white rounded-lg shadow-lg overflow-hidden">
  <div class="relative">
    <img src={image} alt="project picture" class="w-full h-max object-cover"  />

    <div class="absolute bottom-0 w-full bg-black bg-opacity-30 p-4">
      <h2 class="text-3xl font-bold">{title}</h2>
    </div>
  </div>

  <div class=" p-6 flex flex-col md:flex-row gap-6">
    <div class="w-full md:w-1/2 bg-gray-100 p-6 rounded-lg">
      <h3 class="text-xl font-semibold text-gray-900">About</h3>
      <p class="text-gray-900 mt-2">{about}</p>

    </div>
    
    <div class="w-full md:w-1/2 bg-gray-100 p-6 rounded-lg">
      <h3 class="text-xl font-semibold text-gray-900">Project Info</h3>
      <ul class="text-gray-900 mt-2 space-y-1">
        <li> <strong>Role:</strong> {role}</li>
        <li> <strong>Project Status:</strong> {projectstatus}</li>
        <li> <strong>Time Frame:</strong> {timeFrame}</li>
        <li> <strong>Data:</strong> {data}</li>
      </ul>
    </div>
  </div>
</div>