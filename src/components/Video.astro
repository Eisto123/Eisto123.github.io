---
interface Props {
  youtube: string;
}

const { youtube } = Astro.props;
---

<div class="videowrapper">
  <iframe
    class="border border-gray-200 rounded-lg dark:border-gray-700"
    src={youtube}
    title="YouTube video player"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen></iframe>
</div>

<style>
  .videowrapper {
    float: none;
    clear: both;
    position: relative;
    width: 100%; /* Make the container half of its parent width */
    height: 0;
    padding-bottom: 56.25%; /* 50% of 56.25% for the smaller height */
    margin: auto;
    
  }
  .videowrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
