---
import Button from "./Button.astro";


import ProjectVideoAnaren from "./ProjectVideoAnaren.astro";
import ProjectVideoZenmode from "./ProjectVideoZenmode.astro";


 const projects = [
    {
      title: "Anaren",
      body: "A web app for Anaren's IoT platform.",
      href: "/project/one",
      type: "Web App",
      repo: "",
      videoComponent: "ProjectVideoAnaren"
      },
    {
      title: "Zenmode",
      body: "A web app for Anaren's IoT platform.",
      href: "/project/two",
      type: "Web App",
      repo: "",
      videoComponent: "ProjectVideoZenmode"
      }
]
    

---

<!-- 
Map over the projects array and render the components based on the videoComponent property. -->
{
  projects.map((project) => {
    return (
      <div class="project grid grid- ">
        <a href={project.href} class="project__link">
          
        <div class="project__video">
          {
            project.videoComponent === "ProjectVideoAnaren" ? <ProjectVideoAnaren /> : 
            project.videoComponent === "ProjectVideoZenmode" ?<ProjectVideoZenmode />
            : null
          }
        </div>
        </a>
        <div class="project__info">
          <h3 class="project__title">{project.title}</h3>
          <p class="project__body">{project.body}</p>
          <Button href={project.href} text="Learn More"/>
          <div class="project__links">
          </div>
        </div>
      </div>
    );
  })
}
