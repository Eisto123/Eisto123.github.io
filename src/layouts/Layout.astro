---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Footer from "../components/Footer.astro";

import data from "../data/site.json";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html  transition:animate="none">
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={data.siteDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot transition:animate="slide" />
    <Footer />
  </body>
</html>

<style is:global>
  .container {
    max-width: 960px;
    margin: 0 auto;
  }
  #footer {
    position: fixed;
  }

  .dark {
    background: #333333;
  }

  input[type="checkbox"] {
    visibility: hidden;
  }

  .box {
    width: 40px;
    height: 10px;
    background: gray;
    position: relative;
    border-radius: 3px;
  }

  label {
    display: block;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    transition: all 0.6s ease;
    cursor: pointer;
    position: absolute;
    top: -3px;
    left: -3px;
    background: #333333;
  }

  input[type="checkbox"]:checked + label {
    left: 27px;
    background: #f7f7f7;
  }

  @media (max-width: 767px) {
    main {
      min-height: calc(100vh - 69px);
    }
    footer > ul > li {
      display: none;
    }
    footer {
      position: relative;
    }
  }
</style>
